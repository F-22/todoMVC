<!-- TodoMVCTemplate -->
<?dart
part of todoMVC;
?>

<Template name="TodoMVCTemplate" args="list">
  <View layout="type: linear; orient: vertical; spacing: 0" 
  profile="location: center top" width="${550}" control="app: new TodoAppControl(list)">
    <TextView class="h1" profile="width: ignore" text="todos" />
    <View id="todo-app" profile="width: ignore;" 
      layout="type: linear; orient: vertical; spacing: 0">
      <View id="header-bar" profile="width: ignore; height: ignore" />
      <View tag="section" id="header" profile="width: ignore; height: ignore">
        <CheckBox id="toggle-all" profile="width: ignore; height: ignore" 
        value="${app.activeCount == 0}" visible="${!app.todos.isEmpty}"
        on.change="selectAll" />
        <TextBox id="new-todo" placeholder="What needs to be done?" 
        profile="width: ignore; height: ignore" on.keyUp="enterNewTodo" />
      </View>
      <View tag="ul" id="todo-list" profile="width: ignore" 
      layout="type: linear; orient: vertical; spacing: 0">
        <Apply forEach="t in app.todos">
          <View tag="li" class="${t.completed ? 'completed' : ''}"
          profile="width: ignore" control="new TodoItemControl(app, t)">
            <View class="show" profile="width: ignore; height: ignore">
              <CheckBox class="toggle" profile="width: ignore; height: ignore" 
              value="${t.completed}" on.change="toggleCompleted" />
              <TextView class="title" profile="width: ignore; height: ignore" 
              text="${t.title}" on.dblclick="editTitle" />
              <Button class="destroy" profile="width: ignore; height: ignore" 
              on.click="destroy" />
            </View>
            <TextBox class="edit" profile="width: ignore; height: ignore" 
            value="${t.title}" on.blur="submitTitle" on.keyUp="enterTitle" />
          </View>
        </Apply>
      </View>
    </View>
		<View tag="footer" id="footer" profile="width: ignore; height: ignore">
		 <TextView id="todo-count" profile="width: ignore; height: ignore" 
		 html="<strong>${app.activeCount}</strong> item${app.activeCount!=1?'s':''} left" />
		 <Button id="clear-completed" profile="width: ignore; height: ignore" 
		 text="Clear completed (${app.completedCount})" on.click="clearCompleted" />
		</View>
  </View>
</Template>
